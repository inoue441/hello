{
    "name": "bag2/hello",
    "description": "Hello, world package",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "inoue441",
            "email": "y.inoue@jfd.co.jp"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Bag2\\Hello\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bag2\\Hello\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },

    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    }
}
